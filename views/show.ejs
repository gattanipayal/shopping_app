
<%- include ('partials/header') %>

	
		<div class="row text-center" style="display: flex; flex-wrap: wrap;">
			<div class="col-md-9">
				<div class="thumbnail">
					<img class="img-responsive" src="<%=product.image%>">
					<div class="caption-full">
						<h4><%=product.title%></h4>
						<p><%=product.description%></p>
						<p>Price : <%=product.price %> </p>
					</div>
					<a class="btn btn-primary" href="/wishlist/add/<%=product._id%>">Add to Wishlist</a>
					<form action="/cart/add/<%=product._id%>" method="POST">
						<div class="form-check form-check-inline">
  							<input class="form-check-input" type="checkbox" id="inlineCheckbox1" name="size" value="S">
  							<label class="form-check-label" for="inlineCheckbox1">S</label>
						</div>
						<div class="form-check form-check-inline">
  							<input class="form-check-input" type="checkbox" id="inlineCheckbox2" name="size" value="M">
  							<label class="form-check-label" for="inlineCheckbox2">M</label>
						</div>
						<div class="form-check form-check-inline">
  							<input class="form-check-input" type="checkbox" id="inlineCheckbox2" name="size" value="L">
  							<label class="form-check-label" for="inlineCheckbox2">L</label>
						</div>
						<div class="form-check form-check-inline">
  							<input class="form-check-input" type="checkbox" id="inlineCheckbox2" name="size" value="XL">
  							<label class="form-check-label" for="inlineCheckbox2">XL</label>
						</div>
						<button type="submit" class="btn btn-primary mb-2">Add To Cart</button>
					</form>
				</div>
			</div>
		</div>


<%- include ('partials/footer') %>
